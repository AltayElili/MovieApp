<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_background_color"
    android:paddingTop="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/close_icon"
        android:contentDescription="close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/icon_color" />

    <ImageView
        android:id="@+id/imageDevices"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/tv_icon"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageClose" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cihaz Bulunamadı"
        android:textColor="@color/primary_textview_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/urbanist_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageDevices" />

    <TextView
        android:id="@+id/textBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ağıllı TV'nizin, yayın cihazınızın və telefonunuzun eyni Wi‑Fi şəbəkəsində olduğundan əmin olun. Yardıma ehtiyacınız varsa Yardım Mərkəzinə keçin."
        android:textColor="@color/primary_textview_color"
        android:textSize="14sp"
        android:fontFamily="@font/urbanist_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonHelpCenter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="Yardım Mərkəzinə get"
        android:textSize="14sp"
        android:fontFamily="@font/urbanist_semibold"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textBody" />

</androidx.constraintlayout.widget.ConstraintLayout>